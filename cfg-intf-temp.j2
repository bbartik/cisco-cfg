
{% if deployment_type == "single wan untagged lan" %}

!{% if cfg.loop0_ip != "" %}
interface Loopback0
 ip address {{ cfg.loop0_ip }} {{ cfg.loop0_mask }}
!{% endif %}
interface {{ cfg.wan_intf }}
 ip address {{ cfg.wan_ip }} {{ cfg.wan_mask }}
 no shutdown
!
interface {{ cfg.lan_intf }}
 ip address {{ cfg.lan_ip }} {{ cfg.lan_mask }}
 no shutdown
!
{% endif %}


{% if deployment_type == "single wan tagged lan" %}

!{% if cfg.loop0_ip != "" %}
interface Loopback0
 ip address {{ cfg.loop0_ip }} {{ cfg.loop0_mask }}
!{% endif %}
interface {{ cfg.wan_intf }}
 ip address {{ cfg.wan_ip }} {{ cfg.wan_mask }}
 no shutdown
!{% for vlan in vlans %}
interface {{ cfg.lan_vlan }}
 description {{ cfg.vlan_name }} VLAN
 encapsulation dot1q {{ cfg.vlan }}
 ip address {{ cfg.lan_ip }} {{ cfg.lan_mask }}
 no shutdown
!{% endfor %}
{% endif %}

